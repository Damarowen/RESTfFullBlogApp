<%- include("partials/header") %>

<!-- segment adalah background putih -->
<div class="ui container segment main text ">
    <div class="ui huge header"> Edit <%= edit_ejs.title %>  </div>

    <form class="ui form " action="/blogs/<%= edit_ejs._id %>?_method=PUT " method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= edit_ejs.title %>">
        </div class="field">

        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%= edit_ejs.image %>">
        </div class="field">

        <div class="field">
            <label>Blog Post</label>
            <textarea name="blog[body]"><%= edit_ejs.body %></textarea>
        </div>

        <button class="ui violet basic button " type="submit">Submit</button>
    </form>

</div>

<%- include("partials/footer") %>